---
import MaximizeEditorIcon from "../icons/MaximizeEditorIcon.astro"

const { language } = Astro.props
---

<button data-language={language} class="top-2 right-2 z-10 absolute" aria-label="Maximize editor">
  <MaximizeEditorIcon />
</button>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const maximizeButtons = document.querySelectorAll('button[data-language]');

    maximizeButtons.forEach((maximizeButton) => {
      maximizeButton.addEventListener('click', () => {
        const language = maximizeButton.getAttribute('data-language');
        const editor = document.getElementById(language);
        editor.classList.toggle('full');
        const isFull = editor.classList.contains('full');
        maximizeButton.innerHTML = isFull
          ? `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-arrows-minimize icons-tabler-outline"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 9l4 0l0 -4" /><path d="M3 3l6 6" /><path d="M5 15l4 0l0 4" /><path d="M3 21l6 -6" /><path d="M19 9l-4 0l0 -4" /><path d="M15 9l6 -6" /><path d="M19 15l-4 0l0 4" /><path d="M15 15l6 6" /></svg>`
          : `<svg  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icon-tabler-arrows-maximize icons-tabler-outline"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M16 4l4 0l0 4" /><path d="M14 10l6 -6" /><path d="M8 20l-4 0l0 -4" /><path d="M4 20l6 -6" /><path d="M16 20l4 0l0 -4" /><path d="M14 14l6 6" /><path d="M8 4l-4 0l0 4" /><path d="M4 4l6 6" /></svg>`;
      });
    });
  });
</script>